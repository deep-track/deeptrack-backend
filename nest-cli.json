{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/gateway",
  "projects": {
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "auth-app": {
      "type": "application",
      "root": "apps/auth-app",
      "entryFile": "main",
      "sourceRoot": "apps/auth-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-app/tsconfig.app.json"
      }
    },
    "images-app": {
      "type": "application",
      "root": "apps/images-app",
      "entryFile": "main",
      "sourceRoot": "apps/images-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/images-app/tsconfig.app.json"
      }
    },
    "drizzle": {
      "type": "library",
      "root": "libs/drizzle",
      "entryFile": "index",
      "sourceRoot": "libs/drizzle/src",
      "compilerOptions": {
        "tsConfigPath": "libs/drizzle/tsconfig.lib.json"
      }
    }
  }
}